{
    "extends": "./.tsconfig.json",
    "compilerOptions": {
        "allowUnreachableCode": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,

        "declaration": true,
        "declarationDir": "types/",
        "emitDeclarationOnly": true,
        "newLine": "lf",

        "noStrictGenericChecks": true
    },
    "include": [
        "src/core/"
    ]
}
