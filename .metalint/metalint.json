{
    "patterns": [
        "!.git/", "!.nyc_output/", "!coverage/", "!node_modules/",
        "!test/data/", "**"
    ],
    "results": {
        "options": { "verbose": 2 }
    },
    "checkers": [
        {
            "patterns": ["!test/", "**/*.js"],
            "linters": "eslint"
        }, {
            "patterns": "test/**/*.js",
            "linters": { "eslint": ["eslint.json", "eslint_test.json"] }
        }, {
            "patterns": "**/*.md",
            "linters": "markdownlint"
        }, {
            "patterns": "**/*.json",
            "linters": { "jsonlint": null }
        }, {
            "patterns": "package.json",
            "linters": "david"
        }
    ]
}
