{
    "patterns": ["**", "!.git/**", "!*_modules/**", "!coverage/**",
                       "!web/**"],
    "hidden": true,
    "checkers": [
        {
            "patterns": ["**/*.js", "!**/*.min.js"],
            "linters": ["jscs", "jshint"]
        }, {
            "patterns": "**/*.md",
            "linters": "markdownlint"
        }, {
            "patterns": "**/*.json",
            "linters": { "jsonlint": { "comments": false } }
        }
    ]
}
