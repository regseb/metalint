{
    "patterns": ["!.git/**", "!node_modules/**", "!coverage/**",
                 "!test/data/**", "**"],
    "hidden": true,
    "verbose": 2,
    "checkers": [
        {
            "patterns": ["!test/**", "**/*.js"],
            "linters": ["eslint", "jscs"]
        }, {
            "patterns": "test/**/*.js",
            "linters": { "eslint": ["eslint.json", "eslint_test.json"],
                         "jscs": "jscs.json" }
        }, {
            "patterns": "**/*.md",
            "linters": "markdownlint"
        }, {
            "patterns": "**/*.json",
            "linters": { "jsonlint": { "comments": false } }
        }
    ]
}
