{
    "patterns": [
        "!/.git/", "!/.nyc_output/", "!/coverage/", "!/jsdocs/",
        "!/node_modules/", "!/test/data/", "**"
    ],
    "checkers": [
        {
            "patterns": ["!/test/", "*.js"],
            "linters": "eslint"
        }, {
            "patterns": "/test/**/*.js",
            "linters": { "eslint": ["eslint.json", "eslint_test.json"] }
        }, {
            "patterns": ["!/CHANGELOG.md", "*.md"],
            "linters": "markdownlint"
        }, {
            "patterns": "*.json",
            "linters": { "jsonlint": null }
        }, {
            "patterns": "*.yml",
            "linters": { "yaml-lint": null }
        }, {
            "patterns": "/package.json",
            "linters": "david"
        }
    ]
}
