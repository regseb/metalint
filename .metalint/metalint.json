{
    "patterns": [
        "!.git/", "!.nyc_output/", "!node_modules/", "!test/data/", "**"
    ],
    "verbose": 2,
    "checkers": [
        {
            "patterns": ["!test/", "**/*.js"],
            "linters": "eslint"
        }, {
            "patterns": "test/**/*.js",
            "linters": { "eslint": ["eslint.json", "eslint_test.json"] }
        }, {
            "patterns": "**/*.md",
            "linters": "markdownlint"
        }, {
            "patterns": "**/*.json",
            "linters": { "jsonlint": { "comments": false } }
        }, {
            "patterns": "package.json",
            "linters": ["david"]
        }
    ]
}
